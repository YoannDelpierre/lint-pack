{
    "name": "ajgon/lint-pack",
    "description": "Various linters for your Symfony2 project",
    "type": "symfony-bundle",
    "keywords": ["lint", "phpcs", "phpmd", "jshint", "csshint", "twig"],
    "homepage": "https://github.com/ajgon/lint-pack",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Rzegocki",
            "email": "ajgon@irgon.com"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": ">=2.4"
    },
    "target-dir": "Ajgon/LintPackBundle",
    "autoload": {
        "psr-0": {
            "Ajgon\\LintPackBundle": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
